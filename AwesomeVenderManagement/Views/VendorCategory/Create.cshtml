
@{
    ViewBag.Title = "Create";
}

<h2>Create Vender Category</h2>

<script src="~/Scripts/angular.min.js"></script>

<script src="~/Scripts/app/vendorCategory.js"></script>

<div ng-app="venderCategoryModule" ng-controller="venderCategoryController">

    <div class="row">

        <div>Category Name : </div>
        <div>

            <input type="text" ng-model="categoryName" />
        </div>
    </div>

    <div class="row">

        <div>Category Description : </div>
        <div>

            <textarea ng-model="categoryDescription" id="categoryDescription" name="categoryDescription"></textarea>
        </div>
    </div>

    <div class="row">

        <div>&nbsp;</div>
        <div>
            <button id="btnCreateVenderCategory"
                    name="btnCreateVenderCategory"
                    ng-click="createVenderCategory()"
                    class="btn-info"
                    >
                        Create Vender Category
            </button>
        </div>
    </div>
</div>